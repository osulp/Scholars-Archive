{
    "workflows": [
        {
            "name": "GTD_Workflow",
            "label": "Graduate Thesis and Dissertation Workflow",
            "description": "Workflow for Graduate Theses and Dissertations. Review includes the Graduate School and OSULP Cataloging.",
            "actions": [
                {
                    "name": "deposit",
                    "from_states": [],
                    "transition_to": "GradSchool_Review",
                    "notifications": [
                        {
                            "notification_type": "email",
                            "name": "Hyrax::Workflow::PendingReviewNotification",
                            "to": ["approving"]
                        }
                    ],
                    "methods": [
                        "Hyrax::Workflow::DeactivateObject"
                    ]
                }, {
                    "name": "Request_Changes",
                    "from_states": [{"names": ["Deposited", "GradSchool_Review", "OSULP_Review"], "roles": ["approving"]}],
                    "transition_to": "Changes_Required",
                    "notifications": [
                        {
                            "notification_type": "email",
                            "name": "Hyrax::Workflow::ChangesRequiredNotification",
                            "to": ["approving"]
                        }
                    ],
                    "methods": [
                        "Hyrax::Workflow::DeactivateObject"
                    ]
                }, {
                    "name": "Advance",
                    "from_states": [{"names": ["GradSchool_Review"], "roles": ["approving"]}],
                    "transition_to": "OSULP_Review",
                    "notifications": [
                        {
                            "notification_type": "email",
                            "name": "Hyrax::Workflow::DepositedNotification",
                            "to": ["approving"]
                        }
                    ],
                    "methods": [
                        "Hyrax::Workflow::ActivateObject"
                    ]
                }, {
                    "name": "Approve",
                    "from_states": [{"names": ["OSULP_Review"], "roles": ["approving"]}],
                    "transition_to": "Deposited",
                    "notifications": [
                        {
                            "notification_type": "email",
                            "name": "Hyrax::Workflow::DepositedNotification",
                            "to": ["approving"]
                        }
                    ],
                    "methods": [
                        "Hyrax::Workflow::ActivateObject"
                    ]
                }, {
                    "name": "Request_Review",
                    "from_states": [{"names": ["Changes_Required"], "roles": ["depositing"]}],
                    "transition_to": "Pending_Review",
                    "notifications": [
                        {
                            "notification_type": "email",
                            "name": "Hyrax::Workflow::PendingReviewNotification",
                            "to": ["approving"]
                        }
                    ]
                }, {
                    "name": "Comment_Only",
                    "from_states": [
                        { "names": ["Changes_Required"], "roles": ["depositing"] },
                        { "names": ["GradSchool_Review", "OSULP_Review", "Deposited"], "roles": ["approving"]}
                    ]
                }
            ]
        }
    ]
}
