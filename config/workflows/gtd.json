{
    "workflows": [{
        "name": "GTD",
        "label": "Graduate Thesis and Dissertation Workflow",
        "description": "Workflow for Graduate Theses and Dissertations. Review includes the Graduate School and OSULP Cataloging.",
        "actions": [{
            "name": "Deposit",
            "from_states": [],
            "transition_to": "Graduate School Review",
            "notifications": [{
                "notification_type": "email",
                "name": "Hyrax::Workflow::PendingReviewNotification",
                "to": ["approving"]
            }],
            "methods": [
                "Hyrax::Workflow::RevokeEditFromDepositor",
                "Hyrax::Workflow::DeactivateObject"
            ]
        }, {
            "name": "Request Changes",
            "from_states": [{
                "names": ["Deposited", "Graduate School Review", "Library Review"],
                "roles": ["approving"]
            }],
            "transition_to": "Changes Required",
            "notifications": [{
                "notification_type": "email",
                "name": "Hyrax::Workflow::ChangesRequiredNotification",
                "to": ["approving"]
            }],
            "methods": [
                "Hyrax::Workflow::GrantEditToDepositor",
                "Hyrax::Workflow::DeactivateObject"
            ]
        }, {
            "name": "Advance",
            "from_states": [{
                "names": ["Graduate School Review"],
                "roles": ["approving"]
            }],
            "transition_to": "Library Review",
            "notifications": [{
                "notification_type": "email",
                "name": "Hyrax::Workflow::DepositedNotification",
                "to": ["approving"]
            }],
            "methods": [
                "Hyrax::Workflow::RevokeEditFromDepositor",
                "Hyrax::Workflow::ActivateObject"
            ]
        }, {
            "name": "Approve",
            "from_states": [{
                "names": ["Library Review"],
                "roles": ["approving"]
            }],
            "transition_to": "Deposited",
            "notifications": [{
                "notification_type": "email",
                "name": "Hyrax::Workflow::DepositedNotification",
                "to": ["approving"]
            }],
            "methods": [
                "Hyrax::Workflow::RevokeEditFromDepositor",
                "Hyrax::Workflow::ActivateObject"
            ]
        }, {
            "name": "Request Review",
            "from_states": [{
                "names": ["Changes Required"],
                "roles": ["depositing"]
            }],
            "transition_to": "Pending Review",
            "notifications": [{
                "notification_type": "email",
                "name": "Hyrax::Workflow::PendingReviewNotification",
                "to": ["approving"]
            }],
            "methods": [
                "Hyrax::Workflow::RevokeEditFromDepositor"
            ]
        }, {
            "name": "Comment",
            "from_states": [{
                    "names": ["Changes Required"],
                    "roles": ["depositing"]
                },
                {
                    "names": ["Graduate School Review", "Library Review", "Deposited"],
                    "roles": ["approving"]
                }
            ]
        }]
    }]
}
