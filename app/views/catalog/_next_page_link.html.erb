<% if !last_page_button %>
  <% if !(next_page + 1 >= max_pages + 1) %>
    <li class="next_page_button">
      <a data-blacklight-modal="preserve" class="btn <%= @pagination.current_page == max_pages ? "disabled" : ""%>" href=<%= generate_next_page_link(state, request_keys, page: next_page) %>>
        <%= next_page + 1 %>
      </a>
    </li>
  <% end %>
<% else %>
  <li>
    <a data-blacklight-modal="preserve" class="btn <%= @pagination.current_page == max_pages ? "disabled" : ""%>" href=<%= generate_next_page_link(state, request_keys, page: max_pages - 1) %>>
      Last Page
    </a>
  </li>
<% end %>
