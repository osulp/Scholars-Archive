<div class="author nested-field repeating-field">
  <fieldset>
    <ul class="listing">
      <legend>Author</legend>
      <%= f.simple_fields_for :nested_authors do |a| %>
        <li class="field-wrapper">
          <% unless a.object.new_record? %>
            <%= a.input :id, :as => :hidden %>
          <% end %>
          <%= a.input :name, :wrapper_html => {:class => "col-xs-6"} %>
          <%= a.input :orcid, :wrapper_html => {:class => "col-xs-6"} %>
        </li>
      <% end %>
    </ul>
  </fieldset>
</div>
