<div id="generic-file-location-form" class="form-group">
  <div class="geo_point nested-field repeating-field">
    <fieldset>
      <ul class="listing">
        <h4>Point</h4>
        <%= f.simple_fields_for :nested_geo_points do |a| %>
          <li class="field-wrapper">
            <% unless a.object.new_record? %>
              <%= a.input :id, :as => :hidden %>
            <% end %>

            <%= a.input :label, :wrapper_html => {:class => "col-xs-12"} %>
            <%= a.input :latitude, :wrapper_html => {:class => "col-xs-6"} %>
            <%= a.input :longitude, :wrapper_html => {:class => "col-xs-6"} %>
          </li>
        <% end %>
      </ul>
    </fieldset>
  </div>

  <div class="geo_bbox nested-field repeating-field">
    <fieldset>
      <ul class="listing">
        <h4>Bounding box</h4>
        <%= f.simple_fields_for :nested_geo_bbox do |a| %>
          <li class="field-wrapper">
            <% unless a.object.new_record? %>
              <%= a.input :id, :as => :hidden %>
            <% end %>

            <%= a.input :label, :wrapper_html => {:class => "col-xs-12"} %>
            <%= a.input :bbox, :wrapper_html => {:class => "col-xs-12 bbox_field"} %>
            <%= a.input :bbox_lat_north, :label => "Latitude North", :wrapper_html => {:class => "col-xs-6"} %>
            <%= a.input :bbox_lon_west, :label => "Longitude West", :wrapper_html => {:class => "col-xs-6"} %>
            <%= a.input :bbox_lat_south, :label => "Latitude South", :wrapper_html => {:class => "col-xs-6"} %>
            <%= a.input :bbox_lon_east, :label => "Longitude East", :wrapper_html => {:class => "col-xs-6"} %>

          </li>
        <% end %>
      </ul>
    </fieldset>
  </div>
</div>
