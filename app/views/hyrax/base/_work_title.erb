<div class="work-title-wrapper">
  <% presenter.title.each_with_index do |title, index| %>
    <% if index == 0 %>
      <div class="title-with-badges">
        <h2><%= title %></h2>
      </div>
      <%= presenter.permission_badge %>

      <%= presenter.workflow.badge %>
    <% else %>
      <h2><%= title %></h2>
    <% end %>
  <% end %>
</div>
