<div class="modal worktypes fade" id="worktypes-to-create" tabindex="-1" role="dialog" aria-labelledby="select-worktype-label">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="<%= t('hyrax.dashboard.heading_actions.close') %>"><span aria-hidden="true">&times;</span></button>
        <h2 class="modal-title" id="select-worktype-label"><%= t('hyrax.dashboard.heading_actions.select_type_of_work') %></h2>
      </div>
      <form class="new-work-select">
        <div class="modal-body">
          <% model_list_fixed = fixed_work_type_order(create_work_presenter) %>
          <div class="row match-my-cols">
            <div class="col-md-12">
              <% model_list_fixed.each_slice(2) do |row_presenter| %>
                  <div class="row">
                    <div class="col-md-6 select-worktype">
                      <label>
                        <input type="radio" name="payload_concern" value="<%= row_presenter[0].concern %>"
                               data-single="<%= new_polymorphic_path([main_app, row_presenter[0].concern]) %>"
                               data-batch="<%= hyrax.new_batch_upload_path(payload_concern: row_presenter[0].concern) %>">
                        <div class="select-work-icon">
                          <span class="<%= row_presenter[0].icon_class %>"></span>
                        </div>
                        <div class="select-work-description">
                          <h3 class="work-type-title"><%= row_presenter[0].name %></h3>
                          <p><%= row_presenter[0].description %></p>
                        </div>
                      </label>
                    </div>
                    <div class="col-md-6 select-worktype">
                      <label>
                        <input type="radio" name="payload_concern" value="<%= row_presenter[1].concern %>"
                               data-single="<%= new_polymorphic_path([main_app, row_presenter[1].concern]) %>"
                               data-batch="<%= hyrax.new_batch_upload_path(payload_concern: row_presenter[1].concern) %>">
                        <div class="select-work-icon">
                          <span class="<%= row_presenter[1].icon_class %>"></span>
                        </div>
                        <div class="select-work-description">
                          <h3 class="work-type-title"><%= row_presenter[1].name %></h3>
                          <p><%= row_presenter[1].description %></p>
                        </div>
                      </label>
                    </div>
                  </div>
              <% end %>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal"><%= t('hyrax.dashboard.heading_actions.close') %></button>
          <input type="submit" class="btn btn-primary" value="<%= t('hyrax.dashboard.heading_actions.create_work') %>">
        </div>
      </form>
    </div>
  </div>
</div>
