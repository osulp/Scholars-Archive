      <table class="table">
        <tr>
          <th><span class="attribute-label h4">Title:</span></th>
          <td><%= work.title %></td>
        </tr>
        <tr>
          <th><span class="attribute-label h4">Author:</span></th>
          <td><%= work.nested_authors.join(", ") %></td>
        </tr>
        <tr>
          <th><span class="attribute-label h4">Geo Point:</span></th>
          <td><%= work.nested_geo_points.join(", ") %></td>
        </tr>
        <tr>
          <th><span class="attribute-label h4">Geo Bbox:</span></th>
          <td><%= work.nested_geo_bbox.join(", ") %></td>
        </tr>
        <tr>
          <th><span class="attribute-label h4">Description:</span></th>
          <td><%= iconify_auto_link(work.description) %></th>
        </tr>
        <tr>
          <th><span class="attribute-label h4">Keywords:</span></th>
          <td>
            <%= link_to_fields(work.tag_list, Solrizer.solr_name("tag", :facetable)).join(', ').html_safe %>
          </td>
        </tr>
        <tr>
          <th><span class="attribute-label h4">Date Uploaded:</span></th>
          <td><%= work.date_uploaded %></td>
        </tr>
      </table>

